{
  "root": true,
  "ignorePatterns": [
    "projects/**/*",
    "dist/**/*",
    "*.min.*",
    "jest.setup.ts",
    "cypress.config.ts"
  ],
  "overrides": [
    {
      "files": [
        "*.js"
      ],
      "parserOptions": {
        "ecmaVersion": 2022
      },
      "env": {
        "es6": true
      },
      "extends": [
        "plugin:prettier/recommended"
      ]
    },
    {
      "files": [
        "*.json"
      ],
      "extends": [
        "plugin:json/recommended",
        "plugin:prettier/recommended"
      ]
    },
    {
      "files": [
        "cypress/**/*.ts"
      ],
      "plugins": [
        "cypress"
      ],
      "extends": [
        "plugin:cypress/recommended",
        "plugin:chai-friendly/recommended"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 120,
            "tabWidth": 2,
            "ignoreUrls": true
          }
        ]
      }
    },
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "./tsconfig.json",
          "cypress/tsconfig.json"
        ],
        "tsconfigRootDir": "./",
        "createDefaultProgram": true,
        "ecmaVersion": 2022,
        "sourceType": "module"
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/template/process-inline-templates",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "warn",
          {
            "prefix": "app",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "app",
            "style": "camelCase",
            "type": "attribute"
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "excludedFiles": [
        "*inline-template-*.component.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended",
        "plugin:prettier/recommended"
      ],
      "rules": {
        "@angular-eslint/template/no-duplicate-attributes": "error",
        "prettier/prettier": [
          "warn",
          {
            "parser": "angular"
          }
        ]
      }
    }
  ]
}

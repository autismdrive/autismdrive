{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@admin/*": ["src/app/admin/*"],
      "@authentication/*": ["src/app/authentication/*"],
      "@buttons/*": ["src/app/buttons/*"],
      "@commons/*": ["src/app/commons/*"],
      "@dataset/*": ["src/app/dataset/*"],
      "@form-controls/*": ["src/app/form-controls/*"],
      "@help/*": ["src/app/help/*"],
      "@home/*": ["src/app/home/*"],
      "@material/*": ["src/app/material/*"],
      "@navigation/*": ["src/app/navigation/*"],
      "@portal/*": ["src/app/portal/*"],
      "@private-commons/*": ["src/app/private-commons/*"],
      "@profile/*": ["src/app/profile/*"],
      "@project/*": ["src/app/project/*"],
      "@public-commons/*": ["src/app/public-commons/*"],
      "@services/*": ["src/app/services/*"],
      "@shared/*": ["src/app/shared/*"],
      "@utilities/*": ["src/app/utilities/*"]
    },
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": ["es2022", "dom"],
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2022",
    "typeRoots": ["node_modules/@types"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "cypress"
  ]
}
